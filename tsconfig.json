{
  "compilerOptions": {
    "target": "es2016",                               
    "lib": ["ES6"],                                   
    "module": "commonjs",                             
    "rootDir": "src",                                 
    "resolveJsonModule": true,                        
    "allowJs": true,                                  
    "outDir": "build",                                
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                   
    "noImplicitAny": true,                            
  },
  "exclude": ["__test__","node_modules", "build", "*.config.js"]
}
